


<div class="row" ng-controller="OptionCtrl">
    <div id="myCarousel" class="carousel slide col-md-6 " data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">

            <div class="item active">
                <img src="~/images/banner1.jpg" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption">
                    <p>
                        Save your money                       
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner2.jpg" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption">
                    <p>
                        Take care of the future                      
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner3.jpg" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption">
                    <p>
                        Rely on professionals                      
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner4.png" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption">
                    <p>
                        Nobody knows what will happen tomorrow
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="col-md-6">
        <h1>Calculate the cost of your insurance</h1>
        <form>
            <fieldset class="form-group">
                <label for="typecar">Type of vehicle</label>
                <select id="typecar" class="form-control" ng-model="selected.typecar" ng-options="(item.GroupName +' ' + item.Name ) group by item.GroupName for item in data.typecar"></select>
            </fieldset>

            <fieldset class="form-group">
                <label for="city">City vehicle registration</label>
                <select id="city" class="form-control" ng-model="selected.city" ng-options="item.Name group by item.Zone for item in data.city"></select>
            </fieldset>
            
            <fieldset class="form-group">
                <label for="years">Year Vehicle</label>
                <select id="years" class="form-control" ng-model="selected.years" ng-options="item for item in data.years"></select>
            </fieldset>  
                  
            <fieldset class="form-group">
                <label for="scopeuse">Scope of use of vehicle</label>
                <select id="scopeuse" class="form-control" ng-model="selected.scopeuse" ng-options="item.Name for item in data.scopeuse"></select>
            </fieldset> 
               
            <button type="button" class="btn btn-success-outline center-block" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-calculator" aria-hidden="true"></i> Сalculate 
            </button>
            <div fdff></div>
            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Result</h4>
                        </div>
                        <div class="modal-body">                                                          
                                    <ul>
                                        <li>Your car is <span  class="text-info">{{selected.typecar.GroupName}} {{selected.typecar.Name}}</span></li>
                                        <li>Your city is <span class="text-info">{{selected.city.Name}}</span></li>
                                        <li>Car year is <span class="text-info">{{selected.years}}</span></li>
                                        <li>Crash <span class="text-info">{{selected.scopeuse.Name}}</span></li>
                                    </ul>                                                             
                                    <p>Price:<span  class="text-warning">{{calculation()}}</span></p>                                                           
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
   
</div>
