


<div class="row" ng-controller="OptionCtrl">
    <div id="myCarousel" class="carousel slide col-md-6 " data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">

            <div class="item active">
                <img src="~/images/banner1.jpg" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption">
                    <p>
                        Save your money                       
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner2.jpg" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption">
                    <p>
                        Take care of the future                      
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner3.jpg" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption">
                    <p>
                        Rely on professionals                      
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner4.png" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption">
                    <p>
                        Nobody knows what will happen tomorrow
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="col-md-6">
        <h1>Calculate the cost of your insurance</h1>
        <form name="form"  >
            <fieldset class="form-group">
                <label for="typecar">Type of vehicle <i class="fa fa-asterisk " ></i></label>
                <select id="typecar" name="typecar" class="form-control" ng-init="selected.typecar = data.typecar[2]" ng-model="selected.typecar" ng-required="true" ng-options="(item.GroupName +' ' + item.Name ) group by item.GroupName for item in data.typecar ">
                    
                </select>     
                          
            </fieldset>

            <fieldset class="form-group">
                <label for="city">City vehicle registration <i class="fa fa-asterisk" aria-hidden="true"></i></label>
                <select id="city" class="form-control" ng-init="selected.city = data.city[0]" ng-model="selected.city" ng-required="true" ng-options="item.Name group by item.Zone for item in data.city"></select>
            </fieldset>
            
            <fieldset class="form-group">
                <label for="years">Year Vehicle</label>
                <select id="years" class="form-control" ng-init="selected.years = 2016" ng-model="selected.years"  ng-options="item for item in data.years"></select>
            </fieldset>  
                  
            <fieldset class="form-group animate-show">
                <label for="scopeuse">Scope of use of vehicle <i class="fa fa-asterisk" aria-hidden="true"></i></label>
                <select id="scopeuse" class="form-control" ng-init="selected.scopeuse = data.scopeuse[0]" ng-model="selected.scopeuse" ng-required="true" ng-options="item.Name for item in data.scopeuse"></select>
            </fieldset> 
               
            <button type="button" class="btn btn-success-outline center-block" data-toggle="modal" data-target="#myModal" ng-disabled="form.$invalid">
                <i class="fa fa-calculator" aria-hidden="true"></i> Сalculate 
            </button>
         
           @await Html.PartialAsync("_Dialog")

        </form>

       
    </div>
   
</div>
